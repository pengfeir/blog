#comments
  background: #fff
  box-shadow: 1px 2px 3px #ddd
  padding: article-padding
  border: 1px solid color-border
  border-radius: 3px
  margin: block-margin 0
  a
    color: color-link
  .post-body p a{
    color: #0593d3;
    border-bottom: none;
    border-bottom: 1px solid #0593d3;
    &:hover {
      color: #fc6423;
      border-bottom: none;
      border-bottom: 1px solid #fc6423;
    }
 }